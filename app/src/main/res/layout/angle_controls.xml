                app:srcCompat="@drawable/degrees_60_button" />

            <ImageButton
                android:id="@+id/degrees90Button"
                android:layout_width="@dimen/selector_button_width"
                android:layout_height="@dimen/selector_button_height"
                android:layout_marginStart="@dimen/selector_button_margin_start"
                android:layout_marginEnd="@dimen/selector_button_margin_end"
                android:layout_weight="1"
                android:contentDescription="@string/content_description_circle_shape_button"
                app:srcCompat="@drawable/degrees_90_button" />

            <ImageButton
                android:id="@+id/degrees135Button"
                android:layout_width="@dimen/selector_button_width"
                android:layout_height="@dimen/selector_button_height"
                android:layout_marginStart="@dimen/selector_button_margin_start"
                android:layout_marginEnd="@dimen/selector_button_margin_end"
