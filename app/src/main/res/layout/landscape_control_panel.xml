        <include
            android:id="@+id/includedColorControls_land"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/color_controls" />

        <include
            android:id="@+id/includedSelectionControls_land"
            layout="@layout/control_panel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/includedColorControls_land"
            app:layout_constraintBottom_toTopOf="@+id/includedBrushSizeSeekBarWrapper_land"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <LinearLayout
            android:id="@+id/includedBrushSizeSeekBarWrapper_land"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/includedSelectionControls_land"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="@dimen/seekbar_brush_size_include_horizontal_padding">
            <include
                android:id="@+id/includedBrushSizeSeekBar_land"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                layout="@layout/brush_size_seek_bar" />
        </LinearLayout>
<!--

