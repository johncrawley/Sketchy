<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/controlsScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity = "center">

<LinearLayout
    android:id="@+id/shapeOptionsLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/shape_selector_group_top_margin"
    android:orientation="horizontal"
    android:paddingTop="@dimen/shape_options_padding_top">

    <ImageButton
        android:id="@+id/squareShapeButton"
        android:layout_width="@dimen/selector_button_width"
        android:layout_height="@dimen/selector_button_height"
        android:layout_marginStart="@dimen/selector_button_margin_start"
        android:layout_marginEnd="@dimen/selector_button_margin_end"
        android:layout_weight="1"
        android:contentDescription="@string/content_description_square_shape_button"
        app:srcCompat="@drawable/square_shape_button" />

    <ImageButton
        android:id="@+id/circleShapeButton"
        android:layout_width="@dimen/selector_button_width"
        android:layout_height="@dimen/selector_button_height"
        android:layout_marginStart="@dimen/selector_button_margin_start"
        android:layout_marginEnd="@dimen/selector_button_margin_end"
        android:layout_weight="1"
        android:contentDescription="@string/content_description_circle_shape_button"
        app:srcCompat="@drawable/circle_shape_button" />


    <ImageButton
        android:id="@+id/lineShapeButton"
        android:layout_width="@dimen/selector_button_width"
        android:layout_height="@dimen/selector_button_height"
        android:layout_marginStart="@dimen/selector_button_margin_start"
        android:layout_marginEnd="@dimen/selector_button_margin_end"
        android:layout_weight="1"
        android:contentDescription="@string/content_description_line_shape_button"
        app:srcCompat="@drawable/line_shape_button" />

    <ImageButton
        android:id="@+id/roundedRectangleShapeButton"
        android:layout_width="@dimen/selector_button_width"
        android:layout_height="@dimen/selector_button_height"
        android:layout_marginStart="@dimen/selector_button_margin_start"
        android:layout_marginEnd="@dimen/selector_button_margin_end"
        android:layout_weight="1"
        android:contentDescription="@string/content_description_rounded_rectangle_shape_button"
        app:srcCompat="@drawable/rounded_rectangle_shape_button" />
    <ImageButton
        android:id="@+id/triangleShapeButton"
        android:layout_width="@dimen/selector_button_width"
        android:layout_height="@dimen/selector_button_height"
        android:layout_marginStart="@dimen/selector_button_margin_start"
        android:layout_marginEnd="@dimen/selector_button_margin_end"
        android:layout_weight="1"
        android:contentDescription="@string/content_description_triangle_shape_button"
        app:srcCompat="@drawable/triangle_shape_button" />

</LinearLayout>

</HorizontalScrollView>