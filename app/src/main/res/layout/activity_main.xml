    <LinearLayout

        android:id="@+id/shapeOptionsLayout"
        android:orientation="horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorShadeScrollView"

        >

        <ImageButton
            android:id="@+id/squareShapeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/square_shape_button" />

        <ImageButton
            android:id="@+id/circleShapeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/circle_shape_button" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/styleOptionsLayout"
        android:orientation="horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeOptionsLayout"

        >


        <ImageButton
            android:id="@+id/fillStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/fill_style_button" />

        <ImageButton
            android:id="@+id/brokenOutlineStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/broken_outline_style_button" />

        <ImageButton
            android:id="@+id/outlineStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/outline_style_button" />

    </LinearLayout>



    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:indeterminate="false"
        android:max="200"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:progress="50"

        app:layout_constraintBottom_toTopOf="@+id/paintView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/styleOptionsLayout" />

    <com.jacstuff.sketchy.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>