<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/shape_options_padding_top"
        android:layout_marginTop="@dimen/landscape_menu_selector_layout_top_margin">

    <HorizontalScrollView
        android:id="@+id/controlPanelGroup1Scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/controlPanelLayoutGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/control_panel_landscape_margin"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/controlPanelGroup2Scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity = "center">
        <LinearLayout
            android:id="@+id/controlPanelLayoutGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/control_panel_landscape_margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/controlPanelGroup3Scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity = "center">
        <LinearLayout
            android:id="@+id/controlPanelLayoutGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/control_panel_landscape_margin"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
